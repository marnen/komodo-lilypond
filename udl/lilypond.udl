# Main lex file for Lilypond markup.
sublanguage Lilypond
family markup

start_style M_DEFAULT
end_style M_COMMENT

initial IN_M_DEFAULT

state IN_M_DEFAULT:
'%{' : paint(upto, M_DEFAULT), => IN_M_COMMENT

state IN_M_COMMENT:
'}' : paint(include, M_COMMENT), => IN_M_DEFAULT
/\z/ : paint(upto, M_COMMENT)

